
extends texmath

snippet pdf "produce pdf" b
---
title: "${1:title}"
author: "${2:Yufan Lu}"
toc: true
geometry: margin=1.2in
output: pdf_document
header-includes:
- \usepackage{hyperref}
- \usepackage[inline,shortlabels]{enumitem}
- \usepackage{graphicx}
- \usepackage[margin=1.2in]{geometry}
- \usepackage{fancyhdr}
- \usepackage{setspace}
---

\setlength\parindent{0pt}
\pagestyle{fancy}
\fancyhf{}
\rhead{Yufan Lu (Pittsburgh)}
\lhead{$1}
\rfoot{Page \thepage}
\singlespacing
\newpage
endsnippet

snippet ali "\begin{align*}" i
\vspace{-5mm}
\begin{align*}
	$1
\end{align*}
endsnippet

snippet cas "\begin{case}" i
\begin{cases}
	${1:value}, &\textit{ if } ${2:cond} \\\\
	${3:value}, &\textit{ otherwirse }
\end{cases}
endsnippet

snippet sum "\sum" i
\sum^{$1}_{$2}
endsnippet

# text modifier {{{
snippet `8 "\infty" iA
\infty
endsnippet

snippet tt "\text{}" i
\text{${1:${VISUAL}}}
endsnippet

snippet ti "\textit{}" i
\textit{${1:${VISUAL}}}
endsnippet

snippet emp "\emph{}" i
\emph{${1:${VISUAL}}}
endsnippet

snippet bf "\textbf{}" i
\textbf{${1:${VISUAL}}}
endsnippet

snippet mf "\mathbf{}" i
\mathbf{${1:${VISUAL}}}
endsnippet

snippet mc "\mathcal{}" i
\mathcal{${1:${VISUAL}}}
endsnippet

snippet mb "\mathbb{}" i
\mathbb{${1:${VISUAL}}}
endsnippet

snippet ... "\dots" iA
\dots
endsnippet

snippet iff "iff" iw
\textit{iff}
endsnippet
# }}}

# Greeks {{{ #
snippet `a "\alpha" iA
\alpha
endsnippet

snippet `b "\beta" iA
\beta
endsnippet

snippet `B "\Beta" iA
\Beta
endsnippet

snippet `d "\delta" iA
\delta
endsnippet

snippet `D "\Delta" iA
\Delta
endsnippet

snippet `e "\varepsilon" iA
\varepsilon
endsnippet

snippet `g "\gamma" iA
\gamma
endsnippet

snippet `G "\Gamma" iA
\Gamma
endsnippet

snippet `s "\sigma" iA
\sigma
endsnippet

snippet `S "\Sigma" iA
\Sigma
endsnippet

snippet `t "\tau" iA
\tau
endsnippet

snippet `w "\omega" iA
\omega
endsnippet

snippet `W "\Omega" iA
\Omega
endsnippet

snippet `r "\rho" iA
\rho
endsnippet

snippet `l "\lambda" iA
\lambda
endsnippet

snippet `m "\mu" iA
\mu
endsnippet

snippet `p "\phi" iA
\phi
endsnippet

# }}} Greeks #

# arrow {{{ #
snippet -> "\to" iA
\to
endsnippet

snippet => "\to" iA
\Rightarrow
endsnippet
# }}} arrow #

snippet "" "quotes" iA
"${1:${VISUAL:content}}"
endsnippet

